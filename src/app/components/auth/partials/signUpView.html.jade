modal(title='SignUp', visible='_auth.signUpModalStatus')
  form(
    role='form', method='post', ng-submit="_auth.signup()", data-abide,
    novalidate
    )
    .large-6.columns
      .form-group
        .input-group
          span.input-group-label
            b.fi-torso.large
          input.form-control.input-group-field(
            type='text'
            placeholder='Enter Full Name'
            ng-model="_auth.user.full_name"
            required
            )
      
      .form-group
        .input-group
          span.input-group-label
            b.fi-asterisk.large
          input.form-control.input-group-field(
            type='password'
            placeholder='Password'
            ng-model="_auth.user.password"
            required
            )

      button.button.drop-shadow(type='submit') Submit
            
    .large-6.columns
      .form-group
        .input-group
          span.input-group-label
            b.fi-at-sign.large
          input.form-control.input-group-field(
            type='email'
            placeholder='Enter Email'
            ng-model="_auth.user.email"
            required
            )

      .form-group
        .input-group
          span.input-group-label
            b.fi-asterisk.large
          input.form-control.input-group-field(
            type='password'
            placeholder='Password'
            ng-model="_auth.user.password_confirmation"
            required
            )
      
