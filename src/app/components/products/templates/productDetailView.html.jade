.row(ng-controller= 'productsController')
  br
  h5 Product Details
  hr

  .large-4.columns.panel.text-center
    img(ng-src= '{{selectedProduct.logo.url}}')
    //img(ng-src= 'http://localhost:3000/{{selectedProduct.logo.url}}')

  .large-8.columns.text-left
    h4 {{selectedProduct.name}}
    p
      {{selectedProduct.desc}}
      br 
      |Rs {{selectedProduct.rent}}
      br
      |Mft. {{selectedProduct.mft_date | date}}

    h5
      button.warning Add to Cart
    